/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./out-tsc/spec",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "types": [
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/typings.d.ts"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
